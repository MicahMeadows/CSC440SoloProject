<Window
    x:Class="RegistrarCourseManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RegistrarCourseManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:RegistrarCourseManager.View"
    xmlns:viewmodels="clr-namespace:RegistrarCourseManager.ViewModel"
    Title="MainWindow"
    Width="1000"
    Height="600"
    MinWidth="800"
    MinHeight="480"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:LoginViewModel}">
            <view:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TabsViewModel}">
            <view:TabsView />
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>
    <ContentControl Content="{Binding CurrentScreenViewModel}" />

</Window>
