<UserControl
    x:Class="RegistrarCourseManager.View.Tabs.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RegistrarCourseManager.View.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="Created by: Micah Meadows"
                FontSize="20"
                FontWeight="Light" />
            <Label
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="CSC 440 Individual Project"
                FontSize="20"
                FontWeight="Light" />
            <Button Margin="20" Style="{StaticResource RoundButton}">
                <Label Content="Log Out" Foreground="White"/>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
